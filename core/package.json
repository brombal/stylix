{
  "name": "@stylix/core",
  "version": "4.1.1",
  "description": "React, with style. Add styles to your React apps with props: the easy, natural, and low learning curve approach.",
  "keywords": [
    "react",
    "styles",
    "css",
    "css-in-js",
    "emotion",
    "styled-components"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && rollup -c",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "author": "Alex Brombal",
  "license": "MIT",
  "homepage": "https://stylix.dev/",
  "bugs": "https://github.com/brombal/stylix/issues",
  "repository": "https://github.com/brombal/stylix",
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-test-renderer": "^18.0.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mdn-data": "^2.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "@rollup/plugin-json": "^6.1.0",
    "rollup": "^4.12.1",
    "rollup-plugin-ts": "^3.4.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "lint-staged": {
    "**/*.{md,json}": [
      "prettier --embedded-language-formatting off --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "files": [
    "dist/*",
    "module.mjs"
  ]
}
