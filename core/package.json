{
  "name": "@stylix/core",
  "version": "4.0.0-beta2",
  "description": "React, with style. Add styles to your React apps with props: the easy, natural, and low learning curve approach.",
  "keywords": [
    "react",
    "styles",
    "css",
    "css-in-js",
    "emotion",
    "styled-components"
  ],
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/module.mjs",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/index.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && parcel build",
    "start": "tsc --watch",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "author": "Alex Brombal",
  "license": "MIT",
  "homepage": "https://stylix.dev/",
  "bugs": "https://github.com/brombal/stylix/issues",
  "repository": "https://github.com/brombal/stylix",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "parcel": "^2.8.3",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "lint-staged": {
    "**/*.{md,json}": [
      "prettier --embedded-language-formatting off --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "files": [
    "dist/*",
    "module.mjs"
  ]
}
