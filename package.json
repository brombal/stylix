{
  "name": "@stylix/core",
  "version": "3.2.0",
  "description": "React, with style. Add styles to your React apps with props: the easy, natural, and low learning curve approach.",
  "keywords": [
    "react",
    "styles",
    "css",
    "css-in-js",
    "emotion",
    "styled-components"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./exports.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "tsc --watch",
    "test": "jest",
    "clean": "rm -rf dist",
    "prettier": "prettier --write .",
    "eslint": "eslint --fix --ext=.ts,.tsx,.js,.jsx ./src",
    "prepare": "husky install"
  },
  "author": "Alex Brombal",
  "license": "MIT",
  "homepage": "https://stylix.dev/",
  "bugs": "https://github.com/brombal/stylix/issues",
  "repository": "https://github.com/brombal/stylix",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.5",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.6",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "lint-staged": {
    "**/*.{md,json}": [
      "prettier --embedded-language-formatting off --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "files": [
    "dist/*",
    "exports.mjs"
  ]
}
