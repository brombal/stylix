{
  "name": "stylix",
  "version": "1.0.0",
  "description": "Styles with props!",
  "source": "src/index.tsx",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:node && npm run build:web",
    "build:node": "tsc",
    "build:web": "webpack",
    "watch": "concurrently npm:watch:node npm:watch:web",
    "watch:node": "tsc --watch",
    "watch:web": "webpack --watch",
    "serve": "webpack-dev-server --mode development",
    "clean": "rm -rf dist",
    "docs": "npm run clean && concurrently npm:watch:node \"wait-on dist/index.js && npm run docs:start\"",
    "docs:start": "cd docs && npm start",
    "docs:deploy": "cd docs && npm run deploy",
    "prettier": "prettier --write .",
    "eslint": "eslint --ext=.ts,.tsx,.js,.jsx ./src",
    "eslint:fix": "eslint --fix --ext=.ts,.tsx,.js,.jsx ./src"
  },
  "author": "Alex Brombal",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "concurrently": "^5.1.0",
    "csstype": "^2.6.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "eslint-plugin-unused-imports": "^0.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "dependencies": {
    "nano-css": "^5.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint -c .eslintrc.git.js"
    ]
  },
  "files": [
    "dist/*"
  ]
}
