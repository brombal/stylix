{
  "name": "stylix",
  "version": "2.1.0",
  "description": "Styles with props!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prettier": "prettier --write .",
    "eslint": "eslint --ext=.ts,.tsx,.js,.jsx ./src",
    "eslint:fix": "eslint --fix --ext=.ts,.tsx,.js,.jsx ./src"
  },
  "author": "Alex Brombal",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "cssbeautify": "^0.3.1",
    "merge": "^2.1.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.0.0",
    "postcss-default-unit": "github:brombal/postcss-default-unit#main",
    "postcss-inline-media": "github:brombal/postcss-inline-media#main",
    "postcss-nested": "^5.0.3",
    "throttle-debounce": "^3.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint -c .eslintrc.git.js"
    ]
  },
  "files": [
    "dist/*"
  ]
}
