{
  "name": "@stylix/core",
  "version": "3.0.5",
  "description": "React, with style. Add styles to your React apps with props: the easy, natural, and low learning curve approach.",
  "keywords": [
    "react",
    "styles",
    "css",
    "css-in-js",
    "emotion",
    "styled-components"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "tsc --watch",
    "test": "jest",
    "clean": "rm -rf dist",
    "prettier": "prettier --write .",
    "eslint": "eslint --ext=.ts,.tsx,.js,.jsx ./src",
    "eslint:fix": "eslint --fix --ext=.ts,.tsx,.js,.jsx ./src",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks"
  },
  "author": "Alex Brombal",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "lint-staged": {
    "**/*.{md,json}": [
      "prettier --embedded-language-formatting off --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "files": [
    "dist/*"
  ]
}
